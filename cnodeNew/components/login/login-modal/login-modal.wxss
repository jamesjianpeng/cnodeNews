/* components/login/login-modal/login-modal.wxss */
@import "../../../app.wxss";

.login-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  background-color: rgba(255,255,255,0);
  align-items: center;
  justify-content: center;
}

.login-container-init {
  transform: scale3d(0.1, .1, 1);
  opacity: 0;
}

 .login {
  width: 80%;
  background-color: #fff;
  padding: 30px 20px;
  box-shadow: 0 2px 5px 0 #7986CB;
  margin-top: -30%;
}

.token-input {
  color: #3F51B5;
  border-bottom: 1px solid #7986CB;
}

/* .button-group */

.submit {
  border: none;
  margin-top: 15px;
  background-color: #3F51B5;
  color: #fff;
}

.button-bottom {
  display: flex;
  justify-content: space-between;
  margin-top: 15px;
}

.reset, .cancel {
  width: 47%;
  background-color: #7986CB;
  color: #fff;
}

.reset {
  margin-left: 0;
}

.cancel {
  margin-right: 0;
}