/* components/loading/loading-base.wxss */
@import "../../app.wxss";

.loading {
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, .6);
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  z-index: 3;
  display: flex;
  justify-content: center;
  align-items: center;
}
