@import "./icon/iconfont";

view {
  padding: 0;
  margin: 0;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.justify-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.left-container {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.middle-container {
  display: flex;
  align-items: center;
}

.middle-v-container {
  display: flex;
  justify-content: center;
}

.container-default {
  padding: 8px 10px;
  height: 100%;
}

.text {
