}

/* loading */

.content-loading {
  width: 100%;
  height: 100%;
}

.bg-loading-1 {
  background-color: #ECEFF1 !important;
}

.bg-loading-2 {
  background-color: #CFD8DC !important;
}

.bg-loading-3 {
  background-color: #B0BEC5 !important;
}

.color-loading {
  color: #eee !important;
}

.line-height-loading {
  line-height: 24px !important;
  height: 24px !important;
}

.font-size-loading {
  font-size: 10px !important;
}

.radius-loading {
  border-radius: 3px !important;
}

.radius-loading-1 {
  border-radius: 50%;
}

.opacity-loading {
  opacity: 0 !important;
}

